<div class="button-box">
    <p>Don't like our pick?</p>

    <a href="#terms" id="modalButton" class="pick-settings modal-trigger">Change Settings</a>
    <div class="modal" id="terms">
        <div class="modal-content">
            <h4 id="modalTitle">Your Pick Settings</h4>
            <div class="row">
                <div class="container">
                    <!-- LOCATION -->
                    <form class="col s12">
                        <div class="row">
                            <div class="input-field col s6" id="new-location" class="workdammit">
                                <i class="material-icons prefix">home</i>
                                <input id="icon_prefix" type="text" class="validate">
                                <label for="icon_prefix">Location</label>
                            </div>
                        </div>
                    </form>
                    <!-- ROTTEN TOMATOES SLIDER -->
                    <form action="#">
                        <h5>Minimum Critic Score</h5>
                        <i class="material-icons prefix">theaters</i>
                        <p class="range-field">
                            <input type="range" id="scoreMin" min="0" max="100"/>
                        </p>
                    </form>
                    <!-- WAIT DISTANCE SLIDER -->
                    <form action="#">
                        <h5>Max Distance (in miles)</h5>
                        <i class="material-icons prefix">route</i>
                        <p class="range-field">
                            <input type="range" id="maxDis" min="0" max="25" />
                        </p>
                    </form>

                    <!-- RATING RADIO BUTTONS -->
                    <form class="col s12">
                        <div class="row">
                            <div class="input-field col s6" id="rottenTomatoes">
                                <form action="#">
                                    <h5 id="rtTitle">Movie Rating (Maximum)</h5>
                                    <fieldset id = "movieRating">
                                    <p>
                                        <label>
                                            <input class="with-gap" id="select" name="group1" type="radio" value="G" />
                                            <span>G</span>
                                        </label>
                                    </p>
                                    <p>
                                        <label>
                                            <input class="with-gap" id="select" name="group1" type="radio" value="PG" />
                                            <span>PG</span>
                                        </label>
                                    </p>
                                    <p>
                                        <label>
                                            <input class="with-gap" id="select" name="group1" type="radio" value = "PG-13" />
                                            <span>PG-13</span>
                                        </label>
                                    </p>
                                    <p>
                                        <label>
                                            <input class="with-gap" id="select" name="group1" type="radio" value = "R" />
                                            <span>R</span>
                                        </label>
                                    </p>
                                    <p>
                                        <label>
                                            <input class="with-gap" id="select" name="group1" type="radio" value = "N/A" checked />
                                            <span>Any rating</span>
                                        </label>
                                    </p>
                                    </fieldset>
                                </form>
                            </div>
                        </div>
                    </form>
